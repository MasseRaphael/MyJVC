{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post" class="logform">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           <p>Vous Ãªtes connecter en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a></p>
        </div>
    {% else %}

    <h1 class="logh1">Veuillez vous connecter</h1>
    <label for="inputUsername">Pseudo</label><br>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus><br>
    <label for="inputPassword">Mot de passe</label><br>
    <input type="password" name="password" id="inputPassword" class="form-control" required><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn-jvc" type="submit">
        Connexion
    </button>
    {% endif %}
</form>
{% endblock %}
